<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <stroke
                android:color="#FF2C2C32"
                android:width="5dp" />
        </shape>
    </item>

    <item
        android:top="50dp"
        android:right="50dp"
        android:bottom="50dp"
        android:left="50dp">
        <shape android:shape="oval">
            <stroke
                android:color="@color/red"
                android:width="20dp" />
            <size
                android:width="50dp"
                android:height="50dp" />

        </shape>
    </item>
</layer-list>