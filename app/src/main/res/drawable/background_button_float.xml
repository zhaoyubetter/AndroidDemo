<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <layer-list>

            <item android:drawable="@drawable/float_button_shadow1"></item>
            <item android:id="@+id/btn_flat_press" android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval"></shape>
            </item>

        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>

            <item android:drawable="@drawable/float_button_shadow1"></item>
            <item android:id="@+id/btn_flat_shape" android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="oval"></shape>
            </item>

        </layer-list>
    </item>

</selector>