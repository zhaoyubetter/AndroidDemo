<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true"
    android:orientation="vertical">

    <com.ldfs.demo.widget.CenterTextView
        android:id="@+id/cv_text_view"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/dark_gray"
        android:drawableLeft="@drawable/ic_launcher"
        android:text="@string/test"
        android:padding="50dp"
        android:drawablePadding="20dp"
        android:textSize="20dp" />


    <com.ldfs.demo.widget.RadioGridLayout
        android:id="@+id/rl_gravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        auto:rl_mode="single_choose"
        auto:rl_check_res="@drawable/checked1"/>

    <TextView
        android:id="@+id/tv_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/padding"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />

    <SeekBar
        android:id="@+id/sb_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>