<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >

        <com.ldfs.demo.widget.WheelView
            android:id="@+id/wv_wheel"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_degress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/set_degress"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title"
            />

        <SeekBar
            android:id="@+id/sb_degress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="360" />

        <TextView
            android:id="@+id/tv_out_contour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/out_contour"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <SeekBar
            android:id="@+id/sb_out_contour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:id="@+id/tv_inner_contour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/inner_contour"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <SeekBar
            android:id="@+id/sb_inner_contour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/contour_width_mode"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <com.ldfs.demo.widget.RadioGridLayout
            android:id="@+id/rl_inner_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:fg_cellheight="30dp"
            auto:fg_cellwidth="100dp"
            auto:fg_padding="10dp"
            auto:rl_check_res="@drawable/checked2"
            auto:rl_default_res="@drawable/radio_none"
            auto:rl_mode="single_choose" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/contour_mode"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <com.ldfs.demo.widget.RadioGridLayout
            android:id="@+id/rl_contour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:fg_cellheight="30dp"
            auto:fg_cellwidth="100dp"
            auto:fg_padding="10dp"
            auto:rl_check_res="@drawable/checked2"
            auto:rl_default_res="@drawable/radio_none"
            auto:rl_mode="single_choose" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/choose_wheel"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <com.ldfs.demo.widget.RadioGridLayout
            android:id="@+id/rl_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:fg_cellheight="30dp"
            auto:fg_cellwidth="100dp"
            auto:fg_padding="10dp"
            auto:rl_check_res="@drawable/checked2"
            auto:rl_default_res="@drawable/radio_none"
            auto:rl_mode="single_choose" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/text_mode"
            android:textColor="@color/title_color"
            android:textSize="@dimen/text_title" />

        <com.ldfs.demo.widget.RadioGridLayout
            android:id="@+id/rl_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            auto:fg_cellheight="30dp"
            auto:fg_cellwidth="100dp"
            auto:fg_padding="10dp"
            auto:rl_check_res="@drawable/checked2"
            auto:rl_default_res="@drawable/radio_none"
            auto:rl_mode="single_choose" />
    </LinearLayout>

</ScrollView><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_wheel_view.xml -->