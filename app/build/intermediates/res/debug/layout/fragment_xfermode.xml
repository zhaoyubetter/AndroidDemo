<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical" >

    <com.ldfs.demo.widget.XfermodesSampleView
        android:id="@+id/xv_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/gray_press" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/set_radius"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />
    
    <SeekBar
        android:id="@+id/sb_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/choose_xfermode:"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />

    <com.ldfs.demo.widget.RadioGridLayout
        android:id="@+id/rl_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:fg_cellwidth="60dp"
        auto:fg_padding="10dp"
        auto:rl_check_res="@drawable/checked2"
        auto:rl_default_res="@drawable/radio_none"
        auto:rl_mode="single_choose" />

</LinearLayout><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_xfermode.xml -->