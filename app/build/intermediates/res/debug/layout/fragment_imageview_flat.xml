<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <com.ldfs.demo.widget.ImageViewFlat
        android:id="@+id/flat_view"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/contour_mode"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />

    <com.ldfs.demo.widget.RadioGridLayout
        android:id="@+id/rl_flat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:fg_cellheight="30dp"
        auto:fg_cellwidth="100dp"
        auto:fg_padding="10dp"
        auto:rl_check_res="@drawable/checked2"
        auto:rl_default_res="@drawable/radio_none"
        auto:rl_mode="single_choose" />

</LinearLayout><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_imageview_flat.xml -->