<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_chooser_view_content"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_gravity="center" >

    <FrameLayout
        android:id="@+id/expand_activities_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:addStatesFromChildren="true"
        android:focusable="true" >

        <com.ldfs.demo.widget.CenterTextView
            android:id="@+id/tv_to_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:paddingLeft="20dip"
            android:text="@string/share_more" />
    </FrameLayout>

    <View
        android:id="@+id/view_divier"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <FrameLayout
        android:id="@+id/default_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:addStatesFromChildren="true"
        android:focusable="true" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="5dip"
            android:scaleType="fitCenter" />
    </FrameLayout>

</LinearLayout><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/activity_chooser_view.xml -->