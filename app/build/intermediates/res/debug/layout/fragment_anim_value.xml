<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clickable="true"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/add_value"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/tv_add_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/zero"
        android:textColor="@color/title_color"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/add_value_rvs"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />

    <TextView
        android:id="@+id/tv_add_value_rvs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/zero"
        android:textColor="@color/title_color"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="@string/add_value_tovalue"
        android:textColor="@color/title_color"
        android:textSize="@dimen/text_title" />
    
    <TextView
        android:id="@+id/tv_value_to_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="@string/one_hundred"
        android:textColor="@color/title_color"
        android:textSize="30sp" />

</LinearLayout><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_anim_value.xml -->