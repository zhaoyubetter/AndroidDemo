<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:clickable="true">

    <com.ldfs.demo.widget.FrameView
        android:id="@+id/fv_view1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/frame_show" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/frame_show" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/frame_show" />
    </com.ldfs.demo.widget.FrameView>

    <com.ldfs.demo.widget.FrameView
        android:id="@+id/fv_view2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/frame_show" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/frame_show" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="@string/frame_show" />
    </com.ldfs.demo.widget.FrameView>

    <com.ldfs.demo.widget.RadioGridLayout
        android:id="@+id/rl_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        auto:fg_cellwidth="60dp"
        auto:fg_padding="10dp"
        auto:rl_check_res="@drawable/checked2"
        auto:rl_default_res="@drawable/radio_none"
        auto:rl_mode="single_choose" />
</LinearLayout><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_frame_view.xml -->