<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_circle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/dark_gray" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_circle_pager"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <weishang.com.myapplication.widget.PagerIndicator
            android:id="@+id/pi_pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp" />
    </LinearLayout>

</ScrollView><!-- From: file:/Users/cz/Git/demo/app/src/main/res/layout/fragment_view_pager_indicator.xml -->